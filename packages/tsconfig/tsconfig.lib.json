{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "${configDir}",
    "outDir": "${configDir}/dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["${configDir}"],
  "exclude": [
    "${configDir}/node_modules",
    "${configDir}/dist",
    "${configDir}/tsup.config.bundled_*.mjs"
  ]
}
