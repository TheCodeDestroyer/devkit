{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "rootDir": "${configDir}/src"
  },
  "include": ["${configDir}/src"],
  "exclude": [
    "${configDir}/node_modules",
    "${configDir}/dist",
    "${configDir}/src/**/*.test.ts",
    "${configDir}/src/**/fixtures/**/*.ts"
  ]
}
